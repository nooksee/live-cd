set -u
source /etc/live-cd/common
source /etc/live-cd/default

__check_fs_dir__
__check_lock__
__update_distro_name__
__check_sources_list__
__mount_sys__
WARNING_MESSAGE "Use 'exit' to quit properly"
__chroot__ "/bin/bash"
__umount_sys__
__recursive_umount__